// CAMPO | UI.INPUT | SELECT MULTIPLE-LABEL
//*********

.f-input-select-multiple-label{
  reset()
  font-size:1em;
  background: saturation(lighten(cor-azul-escuro,85%),10%);
  color:cor-azul-escuro;
  border: 0px solid  saturation(lighten(cor-azul-escuro,70%),20%);
