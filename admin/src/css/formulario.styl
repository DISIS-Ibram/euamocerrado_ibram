// CAMPO | INPUT | ELEMENTO-COMPLEMENTO
//**********

  .f-elemento-complemento{
    reset()
    &:before{
        seta(20px,cor-cinza,"top",90%)
        // box-shadow 5px 5px 10px 5px rgba(black,0.4)
    }
    box abs l 10px t 100%
    min-height 200px;
    margin-top: 25px;
    z-index: 20;
    & > div{
      position: relative !important;
      float:left;
    }
    border: 5px solid cor-cinza;
    // background: cor-cinza;
    box-shadow 5px 5px 8px 5px rgba(black,0.1)

    .f-dica{
          position: relative !important;
           display: block !important;
        float: left !important;
        color: white !important;
        top: initial !important;
    }
  } 







  // CAMPO | INPUT | ICONE
  //**********
  .f-input-icone{
    reset()
    box abs t 0.5em r 0.5em
    color: cor-cinza
    transition: 0.5s color
    font-size:0.8em;
  }

  .f-input-icone-hover{
    color: darken(cor-cinza,10%)
    transition: 0.5s color
  }
  

  .f-input-icone-invertido{
     color: rgba(black,0.4)
  }
  .f-input-icone-invertido-hover{
     color: rgba(black,0.6)
  }






  // CAMPO | INPUT | DICA
  //**********
  .f-dica{
    reset()
    box abs l 0.5em;
    margin-top: 0.5em;
    width: auto;
    font-size:12px;
    line-height 1.1em !important;
    font-weight 500
    font-style italic
    
    background transparent !important;
    color rgba(cor-cinza,1)
    
    border-radius 5px;
    opacity 0;
    visibility: hidden;
    transition 0.4s
    text-align left
    pointer-events: none !important
     
  }

  .f-dica-visible{
    opacity 1;
    visibility: visible;
    transition 0.2s
   }


  .f-dica-compacto{
      &:after{
          seta(8px,lighten(cor-cinza,30%),"top",20%)
      }
      margin-top: 0.8em;
      padding: 0.5em 0.8em;
      border-radius: 5px;
      background lighten(cor-cinza,30%) !important;
      color:white;
      z-index:15
      font-weight 100
      font-style normal
      font-size:10px;
  }






  // CAMPO | ERRO
  //**********
  .f-erro{
      reset()
      
      &:after{
          seta(8px,red,"top",80%)
      }
      
      position:absolute;
      right:0
      margin-top:3px;
      
      background:red !important;
      color:white !important;
      
      font-size: 0.9em

      padding: 0.6em 0.8em;
      
      border-radius: 5px;

  }


  .f-erro-invertido{
      &:after{
          seta(8px,cor-invertido-label-erro,"top",80%)
      }
     background:cor-invertido-label-erro !important;
  }




// CAMPO | ERRO-ICONE
//**********

.f-erro-icone{
      box l -20 t 2
      color red+15%
      display none
}

.f-erro-icone-show{
      display block
}







