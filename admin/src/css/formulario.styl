#si3 .formulario{
      
    @extend .f-formulario
     
     &.formulario-invertido{
         @extend .f-formulario-invertido
     }

     //PADRAO 
       
     .campogrupo{
          @extends .f-campogrupo
          
          //subugrupo de nivel 3 mostro paddings
          .campogrupo{
                  @extends .f-campogrupo-subgrupo
          }
      }
      

     .campo{
        @extend .f-campo
    
        
        .rotulo{
              @extends .f-rotulo
              
              .requerido{
                @extend .f-rotulo-icone-requerido
              }
              
              ../../.formulario-invertido ^[1..-1],
              ../.invertido ^[1..-1]{
                  @extends .f-rotulo-invertido
              }



              
              i.icon.icone-descricao{
                  @extends .f-rotulo-icone-descricao
                  
                  ../../.active ^[-1..-1],
                  ../../:hover ^[-1..-1]{
                      @extends .f-rotulo-icone-descricao-hover;
                  }
              
              }

              
          }  

       }  

      
     
      
      .requerio .rotulo{
        @extends .f-rotulo-requerido
      }


      .titulo{
          @extend .f-rotulo
      }

      
      .input-wrap{
          position:relative
          @extend .f-input
          
          input, textarea{
             @extend .f-input-elemento
              
              &:focus{
                @extends .f-input-elemento-focus
                ../../../ .formulario-invertido ^[1..-1]{
                   @extends .f-input-elemento-invertido-focus
                }
              }
              
              ../../ .formulario-invertido ^[1..-1]{
                  @extends .f-input-elemento-invertido
              }

          }

          
          .icone{
              @extend .f-input-icone
              
              ../../ .formulario-invertido ^[1..-1]{
                   @extend .f-input-icone-invertido
                }
          }

      }

      

    .elemento-complemento{
        @extends .f-elemento-complemento
    }


     .dica{
          @extend .f-dica
          
          // ../ .f-campo:hover > ^[1..-1],
          ../ .f-campo.active  > ^[1..-1]{
                @extend .f-dica-visible
           }


          ../ .formulario-compacto ^[1..-1],
          ../ .formulario-placeholder ^[1..-1],
          ../ .formulario-mini ^[1..-1]{
               @extend .f-dica-compacto
          }
            
      }



      //ESTADOS DOS CAMPOS
      
      //campo requerido
      .campo.requerido{
            .ui.label{
                @extends .f-rotulo-requerido
            }
      }
      

      .erro-icone{
            @extends .f-erro-icone
      }



      //ERRO
      .campo.erro{

        .ui.label{
              @extends .f-rotulo-erro
        }
        .input-wrap{
            input, textarea{
              @extend .f-input-elemento-erro
            }
         }
         .erro{
            @extends .f-erro
         }
         
         .erro-icone{
            @extends .f-erro-icone-show
         }
      }
      
    //ERRO invertido
       .formulario-invertido .campo.erro{

        .ui.label{
              @extends .f-rotulo-erro-invertido
        }
        .input-wrap{
            input, textarea{
              @extend .f-input-elemento-erro-invertido
            }
         }
         .erro{
            @extends .f-erro-invertido
         }
         
      

      }









      // TIPOS FORMULARIOS / CAOMPOS GRUPOS
        
       &.formulario-placeholder, .placeholder{
          
          @extend .f-formulario-compacto
          
          .campogrupo{
            @extends .f-campogrupo-placeholder
            


          }
          
          .campo{
            @extends .f-campo-placeholder
          }
          
          .rotulo{
            @extends .f-rotulo-placeholder
          }
         .requerio .rotulo{
            @extends .f-rotulo-placeholder
          }
          
         .preenchido, .dirty,.active{
              .rotulo{
                  @extends .f-rotulo-placeholder-preenchido
              }  
          }

          
          
          .input-wrap {
            @extends .f-input-placeholder
            input,textarea{
              @extends .f-input-elemento-placeholder
            }
          }
          
          
      }


      &.formulario-compacto, .compacto{
          @extend .f-formulario-compacto
          
          .campogrupo{
            @extends .f-campogrupo-compacto
          }
          
          .campo{
            @extends .f-campo-compacto
          }
          
          .input-wrap {
             @extends .f-input-compacto
            input,textarea{
              @extends .f-input-elemento-compacto
            }
          }
          
          .rotulo {
             @extends .f-rotulo-compacto
          }
          
      }
      
      &.formulario-mini, .mini{
          @extend .f-formulario-mini
          
          .campogrupo{
            @extends .f-campogrupo-mini
          }
          
          .campo{
            @extends .f-campo-mini
            // @extends .f-campo-placeholder
          }
          
          .input-wrap {
            @extends .f-input-mini
            input,textarea{
              @extends .f-input-elemento-mini
            }
          }
          
          .rotulo {
             @extends .f-rotulo-mini
          }
          
      }
      

       &.formulario-mini.formulario-placeholder, .mini.placeholder{
          @extend .f-formulario-mini
          
          .campogrupo{
            @extends .f-campogrupo-mini
          }
          
          .campo{
            @extends .f-campo-placeholder-mini
            // @extends .f-campo-placeholder
          }
          
          .input-wrap {
            @extends .f-input-placeholder-mini
            input,textarea{
              @extends .f-input-elemento-placeholder-mini
            }
          }
          
          .rotulo {
             @extends .f-rotulo-placeholder-mini
          }
          
          .preenchido{
              .rotulo{
                  @extends .f-rotulo-placeholder-mini-preenchido
              }  
          }
          
      }


      
     

      .campo.semsubgrupo:hover > .input-wrap{
          input, textarea{
            @extend .f-input-elemento-hover
          }
          .icone{
             @extend .f-input-icone-hover
          }
      }
      

       .formulario-invertido .campo.semsubgrupo:hover > .input-wrap{
          input, textarea{
            @extend .f-input-elemento-invertido-hover
          }
          .icone{
             @extend .f-input-icone-invertido-hover
          }
      }
      



  
    // RADIO GRUPO
     .campo.radiogroup .input-wrap{
         @extends .f-input-elemento-radiogroupo
         
         .radio{
           
            @extends .f-input-elemento-radio
            
            label{
                @extends .f-input-elemento-radio-label
                
                ../.checked ^[-1..-1]{
                    @extends .f-input-elemento-radio-label-checked
                }
                  
                
              }
              

         }
         

      }





      


     &.edit{
    .field.dirty{
      .input-wrap{
        input,textarea{
          color:cor-azul
          opacity 1;
          font-width 900 !important
        }
          .ui.checkbox{
            .ui.label{
              color:cor-azul !important
              font-width 900 !important
            }
          }
          
          .radio.checked{
            label{
              color:cor-azul !important
              font-width 900 !important
            }
          }
          

      }
      }
      }





      .acao{
        display:inline-block;
      }




