 |   |_.butao.baixo
 | 
 |     
 |__.acoes
     |
     |_.botao
        |_.icone
        |_.texto
        
*/


.t-tabela{
    display:block;
    position:relative;
    overflow:auto;
  
    table {
        margin-left: 15px !important;
        // background:none !important;
        // border:none !important
    }

    tr{
        position:relative;
    }

    // icone de deletar
    tr .delataIcon{
        position:absolute;
        width:15px;
        height:15px;
        left:0px;
        text-align:center
        opacity:0;
        transition: 200ms
     }

     tr:hover .delataIcon{
            opacity:50;
            transition: 200ms
     }

    tr .delataIcon:hover{
            opacity:100;
            transition: 200ms
     }



     table tbody  tr {
         background: none !important;
         border:none !important
     }

     table tbody  tr:nt-child(2n) {
        background: none !important;
        border:none !important
     }

}




