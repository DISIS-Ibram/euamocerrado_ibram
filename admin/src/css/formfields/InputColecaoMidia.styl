@import mixen-and-variables


//  //
.formulario .ui.colecao-midia-drop,
.ui.InputColecaoMidia
//  // box rel
  width 100%
  height auto;
  margin-bottom 15px
  border-radius 5px
  border 1px dashed gray
  padding 10px
  cursor:pointer
  display:block
  background rgba(white,0)
  transition: initial !important //pq da problema com a data se tiver

  .formulario  //os subformulario
    margin-bottom:0px !important
    margin-top:0px !important

  // toolbar
  & .toolbar-top
    opacity: 0
    transition: 250ms
  &:hover .toolbar-top
    opacity: 1
    transition: 250ms


  &.hover
    border 2px dashed blue
    background-color rgba(cor-azul,0.2)
    transition 0.4s
    *
      pointer-events none !important
      opacity 0.4

  &.ondrag
    *
      pointer-events none !important
      opacity 0.4


    


  .midias-container
    height 100px
    width 100%
    overflow hidden !important

    .midia-col
      padding: 0 !important
      margin: 0 !important
      overflow: hidden
      position: static
      float left    
      
      .midia-form 
        padding: 0px
        margin: 0
        position: static;
        overflow: visible;
        display: block;
        justify-content:center
        border 3px solid transparent
        &:hover, &.open
          border 3px solid cor-laranja
          background: none !important;
          
        &.lista:hover, &.lista.open
          border 3px solid transparent
          background rgba(cor-azul,0.2)
          
        &.lista
          max-width: 800px



          
        .midia-preview
          position relative
          width: 100%
          height: 0
          padding-bottom 100%
          // min-height 100px
          transition 0.4s
          background cor-cinza
          overflow hidden
          
          .icone-com-thumb
              position absolute
              bottom: 5px
              right: 5px

          .fundo
            box full
            background-position 50% 50%
            background-size cover
            background-color: cor-bege
            filter: grayscale()
            opacity 0.7
            ../../../../:hover
              .fundo
                filter: initial
            ../../../../.open 
              .fundo
                filter: initial !important
              



          .fundo.hover
            opacity 0.0
            filter: initial
            transition 0.4s
            
            ../../:hover .fundo.hover
              transition 0.4s
              opacity 1


        .detail
          // display none
          position fixed
          // top: 100%;
          // bottom: 0  
          // margin-top 50px
          // transform translate3d(-50%, -50%, 0)     
          
          // margin-left:-150px;
          background: cor-dica = cor-marrom
          overflow: visible
          width: 800px
          z-index 10000
          border-radius 15px
          box-shadow 4px 5px 8px 1px rgba(black,0.2)
          padding:20px 10px !important
          & .seta
            box w 1 h 1 t -20px l 50%
            margin-left: -5px
            border 10px solid transparent
            border-bottom 10px solid cor-dica
            z-index 1
          
              



