@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

{{ baseTag }}.vtl {
    line-height: 1;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
    display:inline-block;
}

{{ baseTag }}.vtl:before {
    font-family: {{fontName}} !important;
    font-style: normal;
    font-weight: normal !important;
    {{!-- vertical-align: top; --}}
}

{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
    content: "\\{{ this }}";
}
{{/ each }}